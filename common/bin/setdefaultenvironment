# This script is used internally by "$TOOLCHAIN_ROOT"/bootstrap to
# write the default environment to a file (defaultenvironment).

# Create the environment.
if [ "$TOOLCHAIN_ROOT" == "" ]; then
    TOOLCHAIN_COMMON_BIN="$(cd $(dirname ${BASH_SOURCE[0]}) && pwd)"
    if [ ! -e "$TOOLCHAIN_COMMON_BIN"/setenvironment ]; then
        echo "$TOOLCHAIN_COMMON_BIN/setenvironment not found."
        exit 1
    fi
    . "$TOOLCHAIN_COMMON_BIN"/setenvironment "$@"
fi

# Parse the command line.
for i in "$@"; do
    case $i in
        -os:*|--operating-system:*)
            TOOLCHAIN_OS="${i#*:}"
            ;;
        -arch:*|--architecture:*)
            TOOLCHAIN_ARCH="${i#*:}"
            ;;
        -comp:*|--compiler:*)
            TOOLCHAIN_COMPILER="${i#*:}"
            ;;
        -nc:*|--naming-convention:*)
            TOOLCHAIN_NAMING_CONVENTION="${i#*:}"
            ;;
        -dr:*|--development-root:*)
            DEVELOPMENT_ROOT="${i#*:}"
            ;;
        -do:*|--default-organization:*)
            TOOLCHAIN_DEFAULT_ORGANIZATION="${i#*:}"
            ;;
        -dp:*|--default-project:*)
            TOOLCHAIN_DEFAULT_PROJECT="${i#*:}"
            ;;
        -db:*|--default-branch:*)
            TOOLCHAIN_DEFAULT_BRANCH="${i#*:}"
            ;;
        -ds:*|--default-svc:*)
            TOOLCHAIN_DEFAULT_SVC="${i#*:}"
            ;;
    esac
done

if [ "$TOOLCHAIN_OS" == "" ] || [ "$TOOLCHAIN_ARCH" == "" ] || [ "$TOOLCHAIN_COMPILER" == "" ]; then
    echo "usage: $0 $environment_options"
    exit 1
fi

if [ "$TOOLCHAIN_NAMING_CONVENTION" != "Flat" ] && [ "$TOOLCHAIN_NAMING_CONVENTION" != "Hierarchical" ]; then
    echo "Unknown naming convention [-nc | --naming-convention]: $TOOLCHAIN_NAMING_CONVENTION [Flat | Hierarchical]"
    exit 1
fi

TOOLCHAIN_ROOT="$(dirname $(dirname $(cd $(dirname ${BASH_SOURCE[0]}) && pwd)))"

cat > "$TOOLCHAIN_ROOT"/defaultenvironment << EOF
if [ "\$TOOLCHAIN_OS" == "" ]; then
    TOOLCHAIN_OS=$TOOLCHAIN_OS
fi
if [ "\$TOOLCHAIN_ARCH" == "" ]; then
    TOOLCHAIN_ARCH=$TOOLCHAIN_ARCH
fi
if [ "\$TOOLCHAIN_COMPILER" == "" ]; then
    TOOLCHAIN_COMPILER=$TOOLCHAIN_COMPILER
fi
if [ "\$TOOLCHAIN_NAMING_CONVENTION" == "" ]; then
    TOOLCHAIN_NAMING_CONVENTION=$TOOLCHAIN_NAMING_CONVENTION
fi
if [ "\$DEVELOPMENT_ROOT" == "" ]; then
    DEVELOPMENT_ROOT=$DEVELOPMENT_ROOT
fi
if [ "\$TOOLCHAIN_DEFAULT_ORGANIZATION" == "" ]; then
    TOOLCHAIN_DEFAULT_ORGANIZATION=$TOOLCHAIN_DEFAULT_ORGANIZATION
fi
if [ "\$TOOLCHAIN_DEFAULT_PROJECT" == "" ]; then
    TOOLCHAIN_DEFAULT_PROJECT=$TOOLCHAIN_DEFAULT_PROJECT
fi
if [ "\$TOOLCHAIN_DEFAULT_BRANCH" == "" ]; then
    TOOLCHAIN_DEFAULT_BRANCH=$TOOLCHAIN_DEFAULT_BRANCH
fi
if [ "\$TOOLCHAIN_DEFAULT_SVC" == "" ]; then
    TOOLCHAIN_DEFAULT_SVC=$TOOLCHAIN_DEFAULT_SVC
fi
EOF

echo "Default thekogans.net build system environment: $TOOLCHAIN_OS-$TOOLCHAIN_ARCH-$TOOLCHAIN_COMPILER ($TOOLCHAIN_NAMING_CONVENTION)"

exit 0
